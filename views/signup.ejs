<% layout("layout/boilerplate")%>

<div class="row">
    <div class="col-6 offset-3 card card-border mt-3 mb-3">
        <div class="card-body">
            <h2 class="mb-3 ">Sign-Up</h2>
            <form action="/signup" novalidate class="needs-validation" method="POST" >
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" required placeholder="username" id="username" class="form-control" name="username">
                    <div class="valid-feedback">looks Good</div>
                    <div class="invalid-feedback">Enter username</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" required placeholder="email" id="email" class="form-control" name="email">
                    <div class="invalid-feedback">Enter Email</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" required placeholder="password" id="password" class="form-control" name="password">
                    <div class="invalid-feedback">Enter Password</div>
                </div>
                <div class="mb-3">
                    <label for="detail" class="form-label">User Specification</label>
                    <select name="detail" id="detail" class="form-control form-select" aria-label="Default select example">
                        <option value="student" selected>Student</option>
                        <option value="organizer">Organizer</option>
                    </select>
                </div>
                <button class="edit-btn btn btn-dark mb-3 mt-3">SUBMIT</button>
            </form>
            <hr>
            <a href="/login">already signed in</a>
        </div>
        
    </div>
</div>